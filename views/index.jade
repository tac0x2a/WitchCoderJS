extends layout

block content
  .container(ng-controller='index as t' style="max-width:330px;")
    center
      img(style="max-height:160px;" src="/images/logo_top.png")
      h1= app_name
      p #{welcome_msg} Registered {{t.count}} users.
      p
        a.btn.btn-block.btn-primary(href="/signup") Signup
      p
        a.btn.btn-block.btn-primary(href="/auth/google") Login with Google
      p
        a.btn.btn-block.btn-primary(href="/login") Login with Email
