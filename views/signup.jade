extends layout

block content
  .container(style="max-width:330px;")
    center
      img(style="max-height:160px;" src="/images/logo_top.png")
      h1.content Signup

      if errors.length > 0
        .alert.alert-danger(role="alert")
          each em in errors  
            li= em
      
      form(method="POST", action="/signup/return")
        p.input-group
          span.input-group-addon
            span.glyphicon.glyphicon-user(aria-hidden="true")
          input.form-control(type="text", name="name", placeholder="Your Account Name", value="#{name}" aria-describedby="sizing-addon1")
          
        p.input-group
          span.input-group-addon
            span.glyphicon.glyphicon-envelope(aria-hidden="true")
          input.form-control(type="email", name="email", placeholder="E-mail address", value="#{email}")
          
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-console(aria-hidden="true")
          input.form-control(type="password", name="password", placeholder="Password")
        
        p.input-group
          span.input-group-addon
            span.glyphicon.glyphicon-console(aria-hidden="true")
          input.form-control(type="password", name="password_again", placeholder="Password Again")

        input.btn.btn-block.btn-primary(type="submit" value="Signup")

      p
        a(href="/login") Login with Email Address
        
      p
        a(href="/auth/google") Login with Google
