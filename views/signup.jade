extends layout

block content
  div(class="ui middle aligned center aligned grid")
    div(class="column")
      h2(class="ui teal image header")
        div(class="content") Welcome to Signup

      form(method="POST", action="/signup/return" class="ui large form")
        div(class="ui stacked segment")
          div(class="field")
            div(class="ui left icon input")
              i(class="user icon")
              input(type="text", name="name", placeholder="Your Account Name")

          div(class="field")
            div(class="ui left icon input")
              i(class="mail outline icon")
              input(type="text", name="email", placeholder="E-mail address")

          div(class="field")
            div(class="ui left icon input")
              i(class="lock icon")
              input(type="password", name="password", placeholder="Password")
            div(class="ui left icon input")
              i(class="lock icon")
              input(type="password", name="password_again", placeholder="PasswordAgain")

          input(type="submit" value="Signup" class="ui fluid large teal submit button")

      div(class="ui message")
        a(href="/") Back to Top
